/* 
 Sketch generated by the Arduino IoT Cloud Thing "Mehmet"
 https://create.arduino.cc/cloud/things/96e27a93-67b4-43c6-ac70-06b4349ca433 

 Arduino IoT Cloud Variables description

 The following variables are automatically generated and updated when changes are made to the Thing

 float humidity;
 float temperature;
 bool lEDPIN;

 Variables which are marked as READ/WRITE in the Cloud Thing will also have functions
 which are called when their values are changed from the Dashboard.
 These functions are generated with the Thing and added at the end of this sketch.
*/

#include "thingProperties.h"
#include "DHT.h"

#define DHTTYPE DHT11
#define dht_dpin D1
#define LED D2

DHT dht(dht_dpin, DHTTYPE);

// bool lEDPIN = D2; // Define LED pin

void setup() {
 // Initialize serial and wait for port to open:
 Serial.begin(9600);
 // This delay gives the chance to wait for a Serial Monitor without blocking if none is found
 delay(1500); 

 // Defined in thingProperties.h
 initProperties();

 // Connect to Arduino IoT Cloud
 ArduinoCloud.begin(ArduinoIoTPreferredConnection);
  
 /*
   The following function allows you to obtain more information
   related to the state of network and IoT Cloud connection and errors
   the higher number the more granular information you’ll get.
   The default is 0 (only errors).
   Maximum is 4
 */
 setDebugMessageLevel(2);
 ArduinoCloud.printDebugInfo();
 
 pinMode(LED,OUTPUT);
 pinMode(dht_dpin,INPUT);
}

void loop() {
 ArduinoCloud.update();
 // Your code here 
 delay(3000);
 float dHTHUM = dht.readHumidity();
 humidity = dHTHUM;
 float dHTTEMP = dht.readTemperature();
 temperature = dHTTEMP;
 // Serial.print("Current humidity = ");
 // Serial.print(h);
 // Serial.print("% ");
 // Serial.print("temperature = ");
 // Serial.print(dHTTEMP);
 // Serial.println("C");


 if (dHTTEMP >10) { // If temperature is greater than 30 degrees Celsius, turn on the LED
  digitalWrite(LED, HIGH);
   // Serial.println("Temperature is above 30°C! LED On");
  lEDPIN = true;
    
 } else { // If temperature is not greater than 30 degrees Celsius, turn off the LED
  digitalWrite(LED, LOW);
    // Serial.println("Temperature is not above 30°C. LED Off");
  lEDPIN = false;
 }

}
